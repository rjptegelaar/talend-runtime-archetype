<archetype-descriptor
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
	name="talend-runtime-archetype">
	<fileSets>
		<fileSet filtered="true" packaged="true">
			<directory>src/main/assembly</directory>
			<includes>
				<include>talend-accp.xml</include>
				<include>talend-dev.xml</include>
				<include>talend-prod.xml</include>
				<include>talend-test.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true">
			<directory>config/accp</directory>			
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true">			
			<directory>config/dev</directory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true">
			<directory>config/prod</directory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true">
			<directory>config/test</directory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true">
			<directory>/</directory>			
			<includes>
				<include>DockerFile</include>
			</includes>
		</fileSet>
	</fileSets>
	<requiredProperties>
		<requiredProperty key="docker.repo"></requiredProperty>
	</requiredProperties>
</archetype-descriptor>